<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- layout background -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="#0F000000"
                android:startColor="#0F000000" />

            <corners
                android:bottomLeftRadius="18dip"
                android:bottomRightRadius="18dip"
                android:topLeftRadius="18dip"
                android:topRightRadius="18dip" />
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="3px"
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <!-- show rectangle area -->
        <shape>
            <corners
                android:topLeftRadius="18dip"
                android:topRightRadius="18dip"
                android:bottomLeftRadius="18dip"
                android:bottomRightRadius="18dip"
                />
            <!-- 边框的颜色 ：不能和窗口背景色一样 -->
            <stroke
                android:width="1dp"
                android:color="#51B1F8" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <solid android:color="#51B1F8" />
        </shape>
    </item>
</layer-list>