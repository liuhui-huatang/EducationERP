<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_80"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_marginRight="@dimen/common_10"
        >
        <com.htcompany.educationerpforgansu.commonpart.views.XCRoundAndOvalImageView
            android:id="@+id/dormexchageseachadapter_photo_img"
            android:layout_width="@dimen/common_40"
            android:layout_height="@dimen/common_40"
            android:src="@mipmap/me_hredcokn"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/dormexchageseachadapter_ll_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/dormexchageseachadapter_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_5"
                    android:text="刘德华"
                    android:textColor="@color/ssgl_tv1_color"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/dormexchageseachadapter_sex_img"
                    android:layout_width="@dimen/common_15"
                    android:layout_height="@dimen/common_15"
                    android:visibility="gone"
                    android:src="@mipmap/ssmk_rztsjl_icon3"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/dormexchageseachadapter_time_tv"
                android:layout_below="@id/dormexchageseachadapter_ll_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_5"
                android:paddingBottom="@dimen/common_5"
                android:text="2016-12-07"
                android:textColor="@color/ssgl_tv3_color"
                android:textSize="@dimen/textSize_12"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                >
            <TextView
                android:id="@+id/dormexchageseachadapter_xzb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/common_10"
                android:paddingBottom="@dimen/common_10"
                android:paddingRight="@dimen/common_10"
                android:paddingLeft="@dimen/common_5"
                android:text="行政班：电子0902"
                android:textColor="@color/ssgl_tv2_color"
                android:textSize="@dimen/textSize_12"
                />
                <TextView
                    android:id="@+id/dormexchageseachadapter_bzr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_10"
                    android:paddingBottom="@dimen/common_10"
                    android:text="班主任：李春梅"
                    android:textColor="@color/ssgl_tv2_color"
                    android:textSize="@dimen/textSize_12"
                    />
            </LinearLayout>
        </RelativeLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/common_90"
                android:layout_height="@dimen/common_90"
                android:background="@mipmap/ssgl_ssdh_bg"
                android:orientation="vertical"
                android:gravity="center"
                >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_15"
                android:layout_marginLeft="@dimen/common_5"
                android:layout_marginRight="@dimen/common_5"
                >
                <TextView
                    android:id="@+id/dormexchageseachadapter_yssname_tv"
                    android:layout_width="@dimen/common_40"
                    android:layout_height="wrap_content"
                    android:text="203"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/textSize_10"
                    android:drawableLeft="@mipmap/ssgl_ssdh_icon1"
                    android:drawablePadding="@dimen/common_5"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:layout_toRightOf="@id/dormexchageseachadapter_yssname_tv"
                    android:layout_width="@dimen/common_20"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ssgl_ssdh_jiaohuan"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/dormexchageseachadapter_dhssname_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/common_20"
                    android:layout_height="wrap_content"
                    android:text="203"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/textSize_10"
                   android:layout_centerVertical="true"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_15"
                    android:layout_marginLeft="@dimen/common_5"
                    android:layout_marginRight="@dimen/common_5"
                    >
                    <TextView
                        android:id="@+id/dormexchageseachadapter_ycwname_tv"
                        android:layout_width="@dimen/common_40"
                        android:layout_height="wrap_content"
                        android:text="08"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textSize_10"
                        android:drawableLeft="@mipmap/ssgl_ssdh_icon2"
                        android:drawablePadding="@dimen/common_5"
                        android:gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_toRightOf="@id/dormexchageseachadapter_ycwname_tv"
                        android:layout_width="@dimen/common_20"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ssgl_ssdh_jiaohuan"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/dormexchageseachadapter_dhcwname_tv"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/common_20"
                        android:layout_height="wrap_content"
                        android:text="09"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textSize_10"
                       android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>