<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/msgfragment_sp_rel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_10"
            >
            <ImageView
                android:id="@+id/msgfragment_sp_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/xiaoxi_icon3"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/mainmessagelv_flag_tv"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_cicler"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_5"
            android:layout_toRightOf="@id/msgfragment_sp_rel"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/mainmessagelv_title_tv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="审批通知"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/textSize_14"
                    android:singleLine="true"
                    android:padding="@dimen/common_5"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/mainmessagelv_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-5-8"
                    android:padding="@dimen/common_5"
                    android:layout_marginRight="@dimen/common_5"
                    android:layout_centerVertical="true"
                    android:textColor="@color/qj_contentecolor"
                    android:textSize="@dimen/textSize_12"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/mainmessagelv_cotent_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="审批通知"
                android:textColor="@color/qj_contentecolor"
                android:paddingBottom="@dimen/common_5"
                android:layout_marginRight="@dimen/common_10"
                android:singleLine="true"
                android:paddingLeft="@dimen/common_5"
                android:textSize="@dimen/textSize_12"
                android:layout_centerVertical="true"
                />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>