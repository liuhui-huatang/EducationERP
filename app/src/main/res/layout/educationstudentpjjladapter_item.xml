<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/touxiang"
            android:layout_width="@dimen/common_100"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/common_10"
                >
            <ImageView
                android:layout_width="@dimen/common_50"
                android:layout_height="@dimen/common_50"
                android:src="@mipmap/me_hredcokn"
                />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈"
                android:textColor="@color/black2"
                android:padding="@dimen/common_5"
                android:textSize="@dimen/textSize_14"
                />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_gary"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/common_10"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_toRightOf="@id/touxiang"
            android:layout_toLeftOf="@id/right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级0302"
                android:textColor="@color/title_bar_color"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_14"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评教时间：2016-12-03"
                android:textColor="@color/black2"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_14"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>