<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rcadapter_name_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/common_20"
            android:padding="@dimen/common_10"
            android:text="取暖费"
            android:textColor="@color/xsgl_tv1_color"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rcadapter_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/common_10"
                android:text="收费日期：2016-12-03"
                android:textColor="@color/xsgl_tv1_color"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/rcadapter_biaozhun_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="收费标准：学校统一标准"
                android:textColor="@color/xsgl_tv1_color"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/rcadapter_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_20"
            android:drawableLeft="@mipmap/cwmk_sjsf_icon"
            android:drawablePadding="@dimen/common_5"
            android:gravity="center_vertical"
            android:text="¥500"
            android:textColor="@color/ptjs_tv32_color"
            android:textSize="@dimen/textSize_14" />
    </RelativeLayout>
</LinearLayout>