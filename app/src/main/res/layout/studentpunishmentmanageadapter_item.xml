<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="@dimen/common_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/common_10"
                android:layout_centerInParent="true"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/common_40"
                    android:layout_height="@dimen/common_40"
                    android:src="@mipmap/me_hredcokn"
                    />
                <TextView
                    android:id="@+id/classexamadapter_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李看天"
                    android:textColor="@color/jwgl_tv1_color"
                    android:padding="@dimen/common_5"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/classexamadapter_xf_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学号：1235411"
                    android:textColor="@color/jwgl_tv1_color"
                    android:padding="@dimen/common_10"
                    android:textSize="@dimen/textSize_14"
                    />
                <TextView
                    android:id="@+id/classexamadapter_xh_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-12-07 8:30"
                    android:textColor="@color/jwgl_tv1_color"
                    android:padding="@dimen/common_10"
                    android:textSize="@dimen/textSize_14"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/common_20"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/common_30"
                    android:layout_height="@dimen/common_30"
                    android:src="@mipmap/xsgl_xecctanhao"
                    />
                <TextView
                    android:id="@+id/classexamadapter_cj_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通报批评"
                    android:textColor="@color/xsgl_details_tv3color"
                    android:padding="@dimen/common_5"
                    android:textSize="@dimen/textSize_14"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>