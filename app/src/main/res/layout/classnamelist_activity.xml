<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >
    <include
        layout="@layout/common_title_bar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/jwgl_search_bgcolor"
        >
        <EditText
            android:id="@+id/bjhmcsearcher_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_border_shape"
            android:drawableLeft="@mipmap/kwgl_sear_icon"
            android:drawablePadding="@dimen/common_5"
            android:layout_margin="@dimen/common_10"
            android:hint="请输入学生名称"
            android:textColorHint="@color/login_line_bg"
            android:textColor="@color/black2"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            />
    </LinearLayout>
    <GridView
        android:id="@+id/classname_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:horizontalSpacing="@dimen/common_8"
        android:verticalSpacing="@dimen/common_8"
        android:layout_marginTop="@dimen/common_10"
        android:layout_marginRight="@dimen/common_10"
        android:layout_marginLeft="@dimen/common_10"
        />
    <ImageView
        android:id="@+id/classname_wsj_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/wushuju_bg"
        android:scaleType="fitXY"
        android:visibility="gone"
        />
</LinearLayout>