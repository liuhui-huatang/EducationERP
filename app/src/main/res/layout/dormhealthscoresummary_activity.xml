<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/activity_bg_color"
    >
    <include
    layout="@layout/common_title_bar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/jwgl_search_bgcolor"
        >
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/login_line_bg"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="行政班"
            android:textColor="@color/ssgl_tv12_color"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_16"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="班主任"
            android:textColor="@color/ssgl_tv12_color"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_16"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="平均分"
            android:textColor="@color/ssgl_tv12_color"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_16"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg"
        />
    <com.htcompany.educationerpforgansu.commonpart.views.xListView.XListView
        android:id="@+id/healthscoresummary_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0.5dp"
        android:divider="@color/activity_bg_color"
        />
    <ImageView
        android:id="@+id/healthscoresummary_dbsx_wsj_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/wushuju_bg"
        android:scaleType="fitXY"
        android:visibility="gone"
        />
</LinearLayout>