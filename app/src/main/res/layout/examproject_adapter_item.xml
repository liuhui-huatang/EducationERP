<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/examproject_adapter_img"
            android:layout_width="@dimen/common_20"
            android:layout_height="@dimen/common_20"
            android:src="@mipmap/kemu1_icon"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/common_150"
            />
        <TextView
            android:id="@+id/examproject_adapter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="主题"
            android:textSize="@dimen/textSize_16"
            android:layout_marginLeft="@dimen/common_10"
            android:gravity="center"
            android:textColor="@color/work_tv4_color"
            />
    </LinearLayout>

</LinearLayout>