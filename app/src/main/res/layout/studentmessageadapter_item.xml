<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="@dimen/common_60"
            android:layout_height="@dimen/common_100"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/common_10"
            android:gravity="center"
            >
            <com.htcompany.educationerpforgansu.commonpart.views.XCRoundAndOvalImageView
                android:id="@+id/student_photo_img"
                android:layout_width="@dimen/common_40"
                android:layout_height="@dimen/common_40"
                android:src="@mipmap/me_hredcokn"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/studentmessageadapter_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李看天"
                android:textColor="@color/xsgl_tv1_color"
                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_5"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10"
                android:layout_marginRight="@dimen/common_10"
                >
                <TextView
                    android:id="@+id/studentmessageadapter_bj_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班级：电子0902"
                    android:textColor="@color/xsgl_tv1_color"
                    android:singleLine="true"
                    android:textSize="@dimen/textSize_12"
                    android:padding="@dimen/common_10"
                    />
                <TextView
                    android:id="@+id/studentmessageadapter_zy_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业:应用电子"
                    android:textColor="@color/xsgl_tv1_color"
                    android:textSize="@dimen/textSize_12"
                    android:padding="@dimen/common_10"
                    android:singleLine="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10"
                android:layout_marginRight="@dimen/common_10"
                >
                <TextView
                    android:id="@+id/studentmessageadapter_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学号：0902456"
                    android:textColor="@color/xsgl_tv1_color"
                    android:textSize="@dimen/textSize_12"
                    android:padding="@dimen/common_10"
                    />
                <TextView
                    android:id="@+id/studentmessageadapter_nj_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年级:2015秋季"
                    android:textColor="@color/xsgl_tv1_color"
                    android:textSize="@dimen/textSize_12"
                    android:padding="@dimen/common_10"
                    android:singleLine="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>