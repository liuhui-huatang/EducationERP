<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/xspjitem_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="问卷标题：评价你的教师教学方式"
                android:textColor="@color/jwgl_tv6_color"
                android:singleLine="true"
                android:textSize="@dimen/textSize_14"
                />
            <TextView
                android:id="@+id/xspjitem_zt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="已发布"
                android:layout_alignParentRight="true"
                android:textColor="@color/jwgl_tv8_color"
                android:textSize="@dimen/textSize_12"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/xspjitem_starttime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_10"
            android:text="开始时间：2015-01-07"
            android:textColor="@color/jwgl_tv7_color"
            android:textSize="@dimen/textSize_12"
            />
        <TextView
            android:id="@+id/xspjitem_endtime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="结束时间：2015-02-07"
            android:textColor="@color/jwgl_tv7_color"
            android:textSize="@dimen/textSize_12"
            />
    </LinearLayout>
</LinearLayout>