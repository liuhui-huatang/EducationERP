<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    >
    <include
        layout="@layout/common_title_bar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/jwgl_search_bgcolor"
        >
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/login_line_bg"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="姓名"
            android:textColor="@color/ssgl_tv12_color"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_16"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="发放日期"
            android:textColor="@color/ssgl_tv12_color"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_16"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="金额"
            android:textColor="@color/ssgl_tv12_color"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_16"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/finalsalaries_wsj_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/wushuju_bg"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
        <com.htcompany.educationerpforgansu.commonpart.views.xListView.XListView
            android:id="@+id/finalsalaries_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/activity_bg_color"
            android:dividerHeight="@dimen/common_2"
            />
    </RelativeLayout>

</LinearLayout>