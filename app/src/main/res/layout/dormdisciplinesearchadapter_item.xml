<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/noborder_white_shape"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_marginRight="@dimen/common_10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/dormdisciplinesearchadapter_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="李晓明"
                android:textColor="#6c7881"
                android:drawableLeft="@mipmap/wj_xuesheng"
                android:drawablePadding="@dimen/common_10"
                android:textSize="@dimen/textSize_14"
                android:layout_marginLeft="@dimen/common_10"
                />
            <TextView
                android:id="@+id/dormdisciplinesearchadapter_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="2016-12-03"
                android:layout_alignParentRight="true"
                android:textColor="@color/ssgl_tv7_color"
                android:textSize="@dimen/textSize_12"
                android:layout_marginRight="@dimen/common_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/dormdisciplinesearchadapter_adress_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="2教学楼302教师"
                android:textColor="#6c7881"
                android:drawableLeft="@mipmap/wj_adress"
                android:drawablePadding="@dimen/common_10"
                android:textSize="@dimen/textSize_14"
                android:layout_marginLeft="13dp"
                />
            <TextView
                android:id="@+id/dormdisciplinesearchadapter_bed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="7号"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/wj_chuang"
                android:drawablePadding="@dimen/common_10"
                android:textColor="#ff6262"
                android:textSize="@dimen/textSize_14"
                android:layout_marginRight="@dimen/common_10"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>