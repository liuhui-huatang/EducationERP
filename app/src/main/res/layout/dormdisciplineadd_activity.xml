<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/activity_bg_color"
    >
    <include layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="@dimen/common_10"
            android:text="宿舍楼"
            android:textColor="@color/xsgl_details_biaoti_color"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/studentwjadd_ssl_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawablePadding="@dimen/common_5"
            android:drawableRight="@mipmap/right_gary"
            android:gravity="right"
            android:hint="选择宿舍楼"
            android:padding="@dimen/common_10"
            android:textColor="@color/xsgl_details_content_color"
            android:textColorHint="@color/xsgl_details_content_color"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="@dimen/common_10"
            android:text="宿舍"
            android:textColor="@color/xsgl_details_biaoti_color"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/studentwjadd_ss_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawablePadding="@dimen/common_5"
            android:drawableRight="@mipmap/right_gary"
            android:gravity="right"
            android:hint="选择宿舍"
            android:padding="@dimen/common_10"
            android:textColor="@color/xsgl_details_content_color"
            android:textColorHint="@color/xsgl_details_content_color"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="@dimen/common_10"
            android:text="学生"
            android:textColor="@color/xsgl_details_biaoti_color"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/studentwjadd_student_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawablePadding="@dimen/common_5"
            android:drawableRight="@mipmap/right_gary"
            android:gravity="right"
            android:hint="选择学生"
            android:padding="@dimen/common_10"
            android:textColor="@color/xsgl_details_content_color"
            android:textColorHint="@color/xsgl_details_content_color"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="@dimen/common_10"
            android:text="违纪时间"
            android:textColor="@color/xsgl_details_biaoti_color"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/studentwjadd_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawablePadding="@dimen/common_5"
            android:drawableRight="@mipmap/right_gary"
            android:gravity="right"
            android:hint="选择违纪时间"
            android:padding="@dimen/common_10"
            android:textColor="@color/xsgl_details_content_color"
            android:textColorHint="@color/xsgl_details_content_color"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="违纪情况"
            android:textColor="@color/xsgl_details_biaoti_color"
            android:textSize="@dimen/textSize_14" />

        <EditText
            android:id="@+id/studentwjadd_wjqk_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_border_shape"
            android:gravity="top|left"
            android:hint="输入违纪情况"
            android:padding="@dimen/common_10"
            android:textColor="@color/xsgl_details_content_color"
            android:textColorHint="@color/xsgl_details_content_color"
            android:textSize="@dimen/textSize_14"
            android:lines="3"
            android:layout_margin="@dimen/common_10"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="处理意见"
            android:textColor="@color/xsgl_details_biaoti_color"
            android:textSize="@dimen/textSize_14" />

        <EditText
            android:id="@+id/studentwjadd_clyj_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_border_shape"
            android:gravity="top|left"
            android:hint="输入处理意见"
            android:padding="@dimen/common_10"
            android:textColor="@color/xsgl_details_content_color"
            android:textColorHint="@color/xsgl_details_content_color"
            android:textSize="@dimen/textSize_14"
            android:lines="3"
            android:layout_margin="@dimen/common_10"
            />
    </LinearLayout>
</LinearLayout>