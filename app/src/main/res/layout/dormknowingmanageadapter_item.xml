<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <com.htcompany.educationerpforgansu.commonpart.views.XCRoundAndOvalImageView
            android:id="@+id/dormknowingmanageadapter_photo_img"
            android:layout_width="@dimen/common_60"
            android:layout_height="@dimen/common_60"
            android:src="@mipmap/defult_photo_icon"
            android:layout_marginTop="@dimen/common_10"
            android:layout_marginLeft="@dimen/common_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/common_10"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/dormknowingmanageadapter_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_10"
                        android:text="刘德华"
                        android:textColor="@color/ssgl_tv1_color"
                        android:textSize="@dimen/textSize_14"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/dormknowingmanageadapter_sex_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ssmk_rztsjl_icon3"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/dormknowingmanageadapter_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/common_10"
                        android:text="2016-12-5"
                        android:textColor="@color/ssgl_tv3_color"
                        android:textSize="@dimen/textSize_12"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/dormknowingmanageadapter_status_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_20"
                    android:layout_centerVertical="true"
                    android:background="@drawable/blue_shape"
                    android:textColor="@color/white"
                    android:text="缺勤：生病"
                    android:paddingLeft="@dimen/common_10"
                    android:paddingRight="@dimen/common_10"
                    android:paddingTop="@dimen/common_3"
                    android:paddingBottom="@dimen/common_3"
                    android:textSize="@dimen/textSize_12"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/dormknowingmanageadapter_room_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/common_10"
                        android:paddingBottom="@dimen/common_10"
                        android:text="宿\u3000\u3000舍：1号楼101"
                        android:textColor="@color/ssgl_tv2_color"
                        android:textSize="@dimen/textSize_12"
                        />
                    <TextView
                        android:id="@+id/dormknowingmanageadapter_roomtype_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_10"
                        android:text="房间类型：4人公寓"
                        android:textColor="@color/ssgl_tv2_color"
                        android:visibility="gone"
                        android:textSize="@dimen/textSize_12"
                        />

                </LinearLayout>
                    <TextView
                        android:id="@+id/dormknowingmanageadapter_bed_tv"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7号床铺"
                        android:textColor="@color/ssgl_tv5_color"
                        android:textSize="@dimen/textSize_12"
                        android:layout_marginRight="@dimen/common_20"
                        />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>