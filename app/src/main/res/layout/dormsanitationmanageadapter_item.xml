<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/noborder_white_shape"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_marginRight="@dimen/common_10"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/dormsanitationmanageadapter_ssl_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:layout_marginLeft="@dimen/common_10"
                android:text="宿舍楼：1#宿舍楼"
                android:textColor="@color/ssgl_tv6_color"
                android:textSize="@dimen/textSize_14"
                />
            <TextView
                android:id="@+id/dormsanitationmanageadapter_sroom_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10"
                android:padding="@dimen/common_10"
                android:text="宿舍：101房间"
                android:layout_alignParentRight="true"
                android:textColor="#506470"
                android:textSize="@dimen/textSize_14"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/dormsanitationmanageadapter_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_5"
                android:text="2016.6.3"
                android:textColor="@color/ssgl_tv7_color"
                android:layout_marginRight="@dimen/common_10"
                android:textSize="@dimen/textSize_12"
                />
            <RelativeLayout
                android:layout_width="@dimen/common_35"
                android:layout_height="@dimen/common_35"
                android:layout_marginRight="@dimen/common_10"
                android:background="@mipmap/ssgl_wsgl_icon1"
                >
                <TextView
                    android:id="@+id/dormsanitationmanageadapter_source_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="79"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize_14"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize_8"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/common_5"
                    android:layout_marginRight="@dimen/common_5"
                    />
                </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>