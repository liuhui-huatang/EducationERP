<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="@dimen/common_80"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_10"
            >
            <ImageView
                android:id="@+id/mainnewsmore_photo_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/bottombg_show_icon"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/mainnewsmore_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:text="我校开展教学一对一"
                android:maxLines="1"
                android:textSize="@dimen/textSize_16"
                />
            <TextView
                android:id="@+id/mainnewsmore_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:text="我校开展教学一对一"
                android:maxLines="1"
                android:maxEms="15"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_14"
                android:paddingTop="@dimen/common_5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF801A"
                android:text="点击查看详情"
                android:singleLine="true"
                android:textSize="@dimen/textSize_12"
                android:paddingTop="@dimen/common_10"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>