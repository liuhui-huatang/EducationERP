<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/votionposton_code_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/bgtp_tv3color"
        android:padding="@dimen/common_10"
        android:gravity="center"
        android:textSize="@dimen/textSize_14" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/votionposton_cotent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好好"
            android:textColor="@color/bgtp_tv3color"
            android:padding="@dimen/common_10"
            android:gravity="center"
            android:textSize="@dimen/textSize_14" />
        <TextView
            android:id="@+id/votionposton_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90人"
            android:textColor="@color/bgtp_tv3color"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="@dimen/common_10"
            android:layout_marginRight="@dimen/common_20"
            android:textSize="@dimen/textSize_14" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>