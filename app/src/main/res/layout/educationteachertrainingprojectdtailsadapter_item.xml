<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/educationteachertrainingprojectdtailsadapter_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="@dimen/common_10"
                android:text="李小二"
                android:textColor="@color/black2"
                android:gravity="center"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/educationteachertrainingprojectdtailsadapter_zgh_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="16汽修"
                android:padding="@dimen/common_10"
                android:textColor="@color/title_bar_color"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/educationteachertrainingprojectdtailsadapter_czbtn_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/educationteachertrainingprojectdtailsadapter_agree_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="@dimen/common_10"
                android:text="报名通过"
                android:textColor="@color/black2"
                android:background="@drawable/editext_border_shape"
                android:layout_margin="@dimen/common_5"
                android:gravity="center"
                android:textSize="@dimen/textSize_14" />
            <TextView
                android:id="@+id/educationteachertrainingprojectdtailsadapter_reback_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="@dimen/common_10"
                android:text="报名退回"
                android:textColor="@color/black2"
                android:background="@drawable/editext_border_shape"
                android:layout_margin="@dimen/common_5"
                android:gravity="center"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>