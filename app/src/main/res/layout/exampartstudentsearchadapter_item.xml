<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exampartstudentsearchadapter_name_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/common_10"
            android:padding="@dimen/common_10"
            android:text="李看天"
            android:textColor="@color/kwgl_xskccx_tvcolor"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exampartstudentsearchadapter_zwh_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_10"
                    android:text="座位号：B501"
                    android:textColor="@color/kwgl_xskccx_tvcolor"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/exampartstudentsearchadapter_kc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/common_10"
                    android:text="考场：B501"
                    android:textColor="@color/kwgl_xskccx_tvcolor"
                    android:textSize="@dimen/textSize_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exampartstudentsearchadapter_jkjs_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_10"
                    android:singleLine="true"
                    android:text="监考教师：201"
                    android:textColor="@color/kwgl_xskccx_tvcolor"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/exampartstudentsearchadapter_jxb_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/common_10"
                    android:text="教学班：电子0902"
                    android:textColor="@color/kwgl_xskccx_tvcolor"
                    android:textSize="@dimen/textSize_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exampartstudentsearchadapter_xh_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_10"
                    android:text="学号：0902031321"
                    android:textColor="@color/kwgl_xskccx_tvcolor"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/common_10"
                    android:textColor="@color/kwgl_xskccx_tvcolor"
                    android:textSize="@dimen/textSize_14" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>