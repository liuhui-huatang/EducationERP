<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            >
            <com.htcompany.educationerpforgansu.commonpart.views.XCRoundAndOvalImageView
                android:id="@+id/teacherdormmanage_photo_img"
                android:layout_width="@dimen/common_40"
                android:layout_height="@dimen/common_40"
                android:src="@mipmap/defult_photo_icon"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/teacherdormmanage_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李看天"
                android:textColor="@color/jwgl_tv1_color"
                android:padding="@dimen/common_5"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/teacherdormmanage_ssroom_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宿舍：202"
                android:textColor="@color/jwgl_tv1_color"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_14"
                />
            <TextView
                android:id="@+id/teacherdormmanage_xcode_tv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号：0903123"
                android:textColor="@color/jwgl_tv1_color"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_14"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            >
            <TextView
                android:id="@+id/teacherdormmanage_cw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08"
                android:textColor="@color/ptjs_tv33_color"
                android:padding="@dimen/common_5"
                android:textSize="@dimen/textSize_16"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="@dimen/common_20"
                android:layout_height="@dimen/common_20"
                android:src="@mipmap/bzr_ssgl_icon"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>