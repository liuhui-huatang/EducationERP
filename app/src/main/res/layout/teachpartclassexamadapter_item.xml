<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/classexamadapter_counth_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/ptjs_tv33_color"
            android:textSize="@dimen/textSize_16"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_15"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="@dimen/common_80"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/common_10"
                android:layout_centerInParent="true"
                android:gravity="center"
                >
                <com.htcompany.educationerpforgansu.commonpart.views.XCRoundAndOvalImageView
                    android:id="@+id/classexamadapter_photo_tv"
                    android:layout_width="@dimen/common_40"
                    android:layout_height="@dimen/common_40"
                    android:src="@mipmap/me_hredcokn"
                    />
                <TextView
                    android:id="@+id/classexamadapter_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李看天"
                    android:textColor="@color/jwgl_tv1_color"
                    android:padding="@dimen/common_5"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/common_15"
                >
                <TextView
                    android:id="@+id/classexamadapter_xf_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学分：32"
                    android:textColor="@color/jwgl_tv1_color"
                    android:padding="@dimen/common_10"
                    android:textSize="@dimen/textSize_14"
                    />
                <TextView
                    android:id="@+id/classexamadapter_xh_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学号：1235411"
                    android:textColor="@color/jwgl_tv1_color"
                    android:padding="@dimen/common_10"
                    android:textSize="@dimen/textSize_14"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_margin="@dimen/common_10"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/common_20"
                    android:layout_height="@dimen/common_20"
                    android:src="@mipmap/bzr_cj_icon1"
                    />
                <TextView
                    android:id="@+id/classexamadapter_cj_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80分"
                    android:textColor="@color/ptjs_tv33_color"
                    android:padding="@dimen/common_5"
                    android:textSize="@dimen/textSize_16"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>