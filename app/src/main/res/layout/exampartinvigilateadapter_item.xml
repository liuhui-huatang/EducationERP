<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/exampartinvigilateadapter_kc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="考场：B501"
            android:textColor="@color/kwgl_xskccx_tvcolor"
            android:textSize="@dimen/textSize_16"
            android:layout_margin="@dimen/common_10"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/exampartinvigilateadapter_jkjs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="监考教师：张慧"
                android:textColor="@color/kwgl_xskccx_tvcolor"
                android:textSize="@dimen/textSize_12"
                />
            <TextView
                android:id="@+id/exampartinvigilateadapter_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="考试日期：2016-02-12"
                android:layout_alignParentRight="true"
                android:textColor="@color/kwgl_xskccx_tvcolor"
                android:textSize="@dimen/textSize_12"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/exampartinvigilateadapter_kscc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="场次：第一场"
                android:textColor="@color/kwgl_xskccx_tvcolor"
                android:textSize="@dimen/textSize_12"
                />
            <TextView
                android:id="@+id/exampartinvigilateadapter_gh_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="工号：800256"
                android:layout_alignParentRight="true"
                android:textColor="@color/kwgl_xskccx_tvcolor"
                android:textSize="@dimen/textSize_12"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/exampartinvigilateadapter_jiaoshi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="教室：201"
                android:textColor="@color/kwgl_xskccx_tvcolor"
                android:textSize="@dimen/textSize_12"
                />
            <TextView
                android:id="@+id/exampartinvigilateadapter_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:text="考试时间：8:30-10:30"
                android:layout_alignParentRight="true"
                android:textColor="@color/kwgl_xskccx_tvcolor"
                android:textSize="@dimen/textSize_12"
                />
        </RelativeLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>