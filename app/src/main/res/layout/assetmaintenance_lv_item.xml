<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_130"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/assetmaintenance_photo_img"
            android:layout_width="@dimen/common_150"
            android:layout_height="match_parent"
            android:background="@mipmap/bottombg_show_icon"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/assetmaintenance_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="桌子腿报修"
                    android:textColor="@color/azbx_titlecolor"
                    android:textSize="@dimen/textSize_16"
                    android:paddingLeft="@dimen/common_10"
                    android:layout_marginTop="@dimen/common_15"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/common_5"
                    android:layout_marginRight="@dimen/common_10"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/assetmaintenance_zt_img"
                        android:layout_width="@dimen/common_15"
                        android:layout_height="@dimen/common_15"
                        android:src="@mipmap/zcbx_icon_complete"
                        />
                    <TextView
                        android:id="@+id/assetmaintenance_zt_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_10"
                        android:text="已申报"
                        android:textColor="@color/azbx_titlecolor"
                        android:textSize="@dimen/textSize_10"
                        />
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/assetmaintenance_ms_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="桌子的两个腿折断了,请及时来处理"
                android:textColor="@color/zcbx_contentcolor"
                android:textSize="@dimen/textSize_14"
                android:singleLine="true"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/assetmaintenance_adress_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二教304班"
                android:drawableLeft="@mipmap/zcbx_icon_class"
                android:drawablePadding="@dimen/common_5"
                android:textColor="@color/zcbx_smaltextcolor"
                android:textSize="@dimen/textSize_12"
                android:paddingLeft="@dimen/common_10"
                />
            <TextView
                android:id="@+id/assetmaintenance_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2010.10.6"
                android:drawableLeft="@mipmap/zcbx_sicon_times"
                android:drawablePadding="@dimen/common_5"
                android:textColor="@color/zcbx_smaltextcolor"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>