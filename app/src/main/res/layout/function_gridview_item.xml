<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/iv_dgv_rel"
        android:layout_width="@dimen/common_40"
        android:layout_height="@dimen/common_40"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/iv_dgv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/tb_icon_jiaoshipingjiao" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dgv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dgv_rel"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/common_5"
        android:paddingBottom="@dimen/common_5"
        android:paddingRight="@dimen/common_5"
        android:textSize="@dimen/textSize_10"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/iv_delete_dgv_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/jwz_delete"
        android:visibility="gone" />

</RelativeLayout>