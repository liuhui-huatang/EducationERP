<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/noborder_white_shape"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_marginRight="@dimen/common_10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/teacherrcshjcdjadapter_term_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学期：2016-2017第一学期"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_12"
                android:background="@drawable/daythings_shape"
                android:padding="@dimen/common_5"
                />
            <TextView
                android:id="@+id/teacherrcshjcdjadapter_time_tv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间：2016-5-23日"
                android:textColor="@color/ptjs_tv17_color"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_5"
                android:layout_marginRight="@dimen/common_10"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/teacherrcshjcdjadapter_cotent_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查内容：窗户有点不稳，有掉落的危险"
            android:textColor="#6e6f83"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/teacherrcshjcdjadapter_result_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理记录：已经报告给后勤部维修组了"
            android:textColor="#6e6f83"
            android:textSize="@dimen/textSize_14"
            android:paddingBottom="@dimen/common_10"
            android:paddingLeft="@dimen/common_10"
            android:layout_marginLeft="@dimen/common_5"
            />
    </LinearLayout>
</LinearLayout>