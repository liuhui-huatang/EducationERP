<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="@dimen/common_80"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/common_10"
                android:layout_centerInParent="true"
                android:gravity="center"
                >
                <com.htcompany.educationerpforgansu.commonpart.views.XCRoundAndOvalImageView
                    android:id="@+id/jwbjcj_photo_img"
                    android:layout_width="@dimen/common_40"
                    android:layout_height="@dimen/common_40"
                    android:src="@mipmap/me_hredcokn"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/jwbjcj_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李看天"
                    android:textColor="@color/jwgl_tv1_color"
                    android:padding="@dimen/common_5"
                    android:textSize="@dimen/textSize_14"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/jwbjcj_xf_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教学班：32"
                    android:textColor="#6e6f83"
                    android:padding="@dimen/common_10"
                    android:textSize="@dimen/textSize_14"
                    />
                <TextView
                    android:id="@+id/jwbjcj_zcj_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总成绩：100"
                    android:textColor="#6e6f83"
                    android:padding="@dimen/common_10"
                    android:layout_marginLeft="@dimen/common_30"
                    android:singleLine="true"
                    android:textSize="@dimen/textSize_14"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/jwbjcj_xh_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号：1235411"
                android:textColor="#6e6f83"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_14"
                />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>