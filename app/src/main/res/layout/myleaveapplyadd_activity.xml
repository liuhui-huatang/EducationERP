<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/activity_bg_color"
    >
    <include
        layout="@layout/common_title_bar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/common_10"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="请假类型："
            android:textColor="@color/qjsq_tvcolor"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            android:layout_marginLeft="@dimen/common_10"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/myleaveadd_type_tv"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:hint="请选择请假类型"
            android:textColorHint="@color/login_line_bg"
            android:gravity="center"
            android:drawableRight="@mipmap/right_gary"
            android:textColor="@color/qjsq_tvcolor"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="员工身份："
            android:textColor="@color/qjsq_tvcolor"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            android:layout_marginLeft="@dimen/common_10"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioGroup
                android:id="@+id/leaveapply_shenfen_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/common_10"
                android:layout_marginRight="@dimen/common_10"
                >
                <RadioButton
                    android:id="@+id/leaveapply_ptjzg_rd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="普通教职工"
                    android:textSize="@dimen/textSize_14"
                    android:textColor="@color/qjsq_tvcolor"
                    android:gravity="center"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/leaveapply_zcld_rd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="中层领导"
                    android:textSize="@dimen/textSize_14"
                    android:textColor="@color/qjsq_tvcolor"
                    android:gravity="center"
                    />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_5"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="开始时间"
            android:textColor="@color/qjsq_tvcolor"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/myleaveapply_icon_img"
                android:layout_width="@dimen/common_10"
                android:layout_height="@dimen/common_10"
                android:scaleType="fitXY"
                android:src="@mipmap/qj_icon_ty_green"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/common_5"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/leaveadd_starttime_tv"
                android:layout_width="@dimen/common_200"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="选择开始时间"
                android:textColorHint="@color/login_line_bg"
                android:drawableRight="@mipmap/qj_icon_textt"
                android:drawablePadding="@dimen/common_5"
                android:textColor="@color/black2"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                android:background="@drawable/editext_border_shape"
                android:layout_margin="@dimen/common_10"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textColor="@color/black2"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/common_10"
                android:layout_height="@dimen/common_10"
                android:scaleType="fitXY"
                android:src="@mipmap/qj_icon_ty_red"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/common_5"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/leaveadd_endtime_tv"
                android:layout_width="@dimen/common_200"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="选择结束时间"
                android:textColorHint="@color/login_line_bg"
                android:drawableRight="@mipmap/qj_icon_textt"
                android:drawablePadding="@dimen/common_5"
                android:textColor="@color/black2"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                android:background="@drawable/editext_border_shape"
                android:layout_margin="@dimen/common_10"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假事由"
            android:textColor="@color/qjsq_tvcolor"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            android:layout_marginLeft="@dimen/common_20"
            />
        <EditText
            android:id="@+id/leaveadd_qjsy_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="输入原因"
            android:textColorHint="@color/login_line_bg"
            android:background="@drawable/editext_border_shape"
            android:layout_marginLeft="@dimen/common_30"
            android:layout_marginRight="@dimen/common_30"
            android:layout_marginBottom="@dimen/common_30"
            android:lines="5"
            android:gravity="top|left"
            android:textColor="@color/black2"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            />
    </LinearLayout>
</LinearLayout>