<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    >
    <include
        layout="@layout/common_title_bar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/jwgl_search_bgcolor"
        >
        <EditText
            android:id="@+id/outlay_search_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_border_shape"
            android:drawableLeft="@mipmap/kwgl_sear_icon"
            android:drawablePadding="@dimen/common_5"
            android:layout_margin="@dimen/common_10"
            android:hint="请输入教职工名称"
            android:textColorHint="@color/login_line_bg"
            android:textColor="@color/black2"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/financepartoutlay_wsj_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/wushuju_bg"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
        <com.htcompany.educationerpforgansu.commonpart.views.xListView.XListView
            android:id="@+id/financepartoutlay_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/activity_bg_color"
            android:dividerHeight="@dimen/common_2"
            />
    </RelativeLayout>


</LinearLayout>