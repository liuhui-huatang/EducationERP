<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/teachingdesignadapter_term_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学期：2015-2016第一学期"
                android:textColor="@color/ptjs_tv1_color"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_14"
                />
            <TextView
                android:id="@+id/teachingdesignadapter_zt_tv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待审核"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/common_10"
                android:paddingRight="@dimen/common_10"
                android:paddingTop="@dimen/common_5"
                android:paddingBottom="@dimen/common_5"
                android:textSize="@dimen/textSize_12"
                android:background="@drawable/red_shape"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_10"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_0.5"
            android:background="@color/login_line_bg"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/teachingdesignadapter_kc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程：网络工程"
            android:textColor="@color/bggg_contentecolor"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_14"
            />
            <TextView
                android:id="@+id/teachingdesignadapter_dkjs_tv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代课教师：王老师"
                android:textColor="@color/bggg_contentecolor"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_14"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/teachingdesignadapter_sj_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间：第一周星期二第3节"
            android:textColor="@color/bggg_contentecolor"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_14"
            />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>