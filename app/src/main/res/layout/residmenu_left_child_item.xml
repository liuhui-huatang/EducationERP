<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/biaoshi"
            android:layout_width="@dimen/common_15"
            android:layout_height="@dimen/common_15"
            android:layout_marginTop="@dimen/common_15"
            android:layout_marginLeft="@dimen/common_15"
            android:layout_marginBottom="@dimen/common_15"
            android:layout_gravity="center_vertical"
            android:background="@drawable/main_leftchild_shape1"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
        <TextView
            android:id="@+id/childitem_name_tv"
            android:text="小红"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_16"
            android:gravity="center"
            android:padding="@dimen/common_10"
            android:layout_gravity="center_vertical"
            android:textColor="@color/ssgl_tv13_color"
            />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/childitem_statius_tv"
                android:text="小红"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14"
                android:gravity="center"
                android:padding="@dimen/common_10"
                android:layout_gravity="center_vertical"
                android:textColor="@color/ssgl_tv10_color"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>