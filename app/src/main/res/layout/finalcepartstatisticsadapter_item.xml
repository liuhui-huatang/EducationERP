<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/statisticsadapter_zy_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="艺术设计"
            android:singleLine="true"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/xsgl_tv1_color"
            android:padding="@dimen/common_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_10"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/common_15"
            >
            <TextView
                android:id="@+id/statisticsadapter_nj_tv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年级:高二"
                android:textSize="@dimen/textSize_14"
                android:textColor="@color/xsgl_tv1_color"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/statisticsadapter_xz_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学制：三年制"
                android:textSize="@dimen/textSize_14"
                android:singleLine="true"
                android:textColor="@color/xsgl_tv1_color"
                android:padding="@dimen/common_10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/common_15"
            >
            <TextView
                android:id="@+id/statisticsadapter_jxbgs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教学班个数：10"
                android:textSize="@dimen/textSize_14"
                android:textColor="@color/xsgl_tv1_color"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/statisticsadapter_ysmoney_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应收费:10万"
                android:textSize="@dimen/textSize_14"
                android:textColor="@color/ssgl_tv10_color"
                android:padding="@dimen/common_10"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>