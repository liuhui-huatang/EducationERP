<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_shape_editxt"
        android:layout_centerInParent="true"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="筛选条件"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="@dimen/common_10"
            android:background="@color/title_bar_color"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="@color/title_bar_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <Button
                android:id="@+id/phonedailog_cancle_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="按办理时间排序"
                android:background="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/text_color" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_0.5"
                android:background="@color/title_bar_color" />
            <Button
                android:id="@+id/phonedailog_sure_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="按发起时间排序"
                android:background="@color/white"
                android:textSize="16sp"
                android:textColor="@color/text_color" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>