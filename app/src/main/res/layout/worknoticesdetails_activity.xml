<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >
    <include
        layout="@layout/common_title_bar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/worknoticesdetails_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全体都到操场集合"
            android:textSize="@dimen/textSize_20"
            android:layout_centerInParent="true"
            android:padding="@dimen/common_10"
            android:textColor="#4B556a" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/worknoticesdetails_person_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2015-12-03"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                android:gravity="center"
                android:textColor="#9D9D9D"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/textSize_16" />
            <TextView
                android:id="@+id/worknoticesdetails_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="系统管理员"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                android:gravity="center"
                android:textColor="#0092EF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/textSize_16" />
            <TextView
                android:id="@+id/worknoticesdetails_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全校公告"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                android:gravity="center"
                android:textColor="#9D9D9D"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="@color/login_line_bg"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
           />
        <TextView
            android:id="@+id/worknoticesdetails_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="全体都到操场集合，开表彰大会。全体都到操场集合，开表彰大会全体都到操场集合，开表彰大会全体都到操场集合，开表彰大会全体都到操场集合，开表彰大会"
            android:textSize="@dimen/textSize_16"
            android:padding="@dimen/common_10"
            android:lineSpacingExtra="@dimen/common_2"
            android:textColor="#6C6C6C" />
        <WebView
            android:id="@+id/worknoticesdetails_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            />
    </LinearLayout>
</LinearLayout>