<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    android:elevation="8dp"
    >
    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp" android:id="@+id/titlebar_rel"
    android:background="@mipmap/commentitle_icon_bg"
        >
    <!-- 返回按钮 -->
    <RelativeLayout
        android:id="@+id/reback_btn"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_15"
            android:src="@mipmap/reback_icon"
            />
     </RelativeLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:text="模拟标题"
        android:textColor="#fff"
        android:textSize="@dimen/textSize_20" />
    <RelativeLayout
        android:id="@+id/right_share_rel"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        >
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
     </RelativeLayout>
     <RelativeLayout
        android:id="@+id/right_btn"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/right_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_15"
            android:layout_alignParentRight="true"
            android:padding="@dimen/common_8"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/white"
            />
     </RelativeLayout>
     <RelativeLayout
        android:id="@+id/right_three_btn"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/rightthree_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_10"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/white"
            android:text="添加"
            />
     </RelativeLayout>
 </RelativeLayout>
</LinearLayout>