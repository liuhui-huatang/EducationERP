<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/workmeetingadapter_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教学交流会"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/bghy_titlecolor"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/workmeetingadapter_zt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待审核"
                android:textSize="@dimen/textSize_12"
                android:layout_alignParentRight="true"
                android:padding="@dimen/common_10"
                android:layout_marginRight="@dimen/common_15"
                android:textColor="@color/bghy_ztcolor" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                android:layout_width="@dimen/common_10"
                android:layout_height="@dimen/common_10"
                android:scaleType="fitXY"
                android:src="@mipmap/qj_icon_ty_green"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_10"
                android:layout_gravity="center_vertical"
                />
                <TextView
                    android:id="@+id/workmeetingadapter_starttiem_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间：2016-12-5 18:30"
                    android:textSize="@dimen/textSize_14"
                    android:textColor="@color/bghy_timecolor"
                    android:paddingLeft="@dimen/common_10"
                    />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/common_10"
                >
                <ImageView
                    android:layout_width="@dimen/common_10"
                    android:layout_height="@dimen/common_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/qj_icon_ty_red"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_10"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/workmeetingadapter_endtime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间：2016-12-6 18:30"
                    android:textSize="@dimen/textSize_14"
                    android:textColor="@color/bghy_timecolor"
                    android:paddingLeft="@dimen/common_10"
                    />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/workmeetingadapter_sqr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请人：李老师"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/bghy_sqrcolor"
            android:padding="@dimen/common_10"
            android:drawableLeft="@mipmap/bghy_icon_ty_ren"
            android:drawablePadding="@dimen/common_10"
            />
    </LinearLayout>
</LinearLayout>