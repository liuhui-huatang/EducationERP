<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="@dimen/common_100"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/educationmakeupcjadapter_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李看天"
                android:textColor="@color/jwgl_tv1_color"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_14"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                />
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/educationmakeupcjadapter_class_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程：java开发"
                android:textColor="@color/jwgl_tv1_color"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_12"
                />
            <TextView
                android:id="@+id/educationmakeupcjadapter_exam_tv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成绩：100"
                android:textColor="@color/jwgl_tv1_color"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_12"
                android:layout_marginRight="@dimen/common_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/educationmakeupcjadapter_jxb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教学班：0902班32"
                android:textColor="@color/jwgl_tv1_color"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_12"
                />
            <TextView
                android:id="@+id/educationmakeupcjadapter_number_tv"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号：1235411"
                android:textColor="@color/jwgl_tv1_color"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_12"
                android:layout_marginRight="@dimen/common_10"
                />
        </RelativeLayout>
    </LinearLayout>
        </LinearLayout>
</LinearLayout>